{
  "mcpServers": {
    "unified": {
      "command": "python",
      "args": ["-m", "dreamwalker_mcp.mcp.stdio_servers.unified_stdio"],
      "description": "Unified Orchestrator Server - Beltalowda & Swarm multi-agent orchestration",
      "env": {
        "ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}",
        "OPENAI_API_KEY": "${OPENAI_API_KEY}",
        "XAI_API_KEY": "${XAI_API_KEY}",
        "MISTRAL_API_KEY": "${MISTRAL_API_KEY}",
        "COHERE_API_KEY": "${COHERE_API_KEY}",
        "GEMINI_API_KEY": "${GEMINI_API_KEY}",
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}",
        "GROQ_API_KEY": "${GROQ_API_KEY}",
        "HUGGINGFACE_API_KEY": "${HUGGINGFACE_API_KEY}"
      }
    },
    "providers": {
      "command": "python",
      "args": ["-m", "dreamwalker_mcp.mcp.stdio_servers.providers_stdio"],
      "description": "LLM Providers Server - 9 LLM providers with chat, vision, and image generation",
      "env": {
        "ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}",
        "OPENAI_API_KEY": "${OPENAI_API_KEY}",
        "XAI_API_KEY": "${XAI_API_KEY}",
        "MISTRAL_API_KEY": "${MISTRAL_API_KEY}",
        "COHERE_API_KEY": "${COHERE_API_KEY}",
        "GEMINI_API_KEY": "${GEMINI_API_KEY}",
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}",
        "GROQ_API_KEY": "${GROQ_API_KEY}",
        "HUGGINGFACE_API_KEY": "${HUGGINGFACE_API_KEY}"
      }
    },
    "data": {
      "command": "python",
      "args": ["-m", "dreamwalker_mcp.mcp.stdio_servers.data_stdio"],
      "description": "Data Fetching Server - Wikipedia, YouTube, Finance, Weather, GitHub, NASA, News, OpenLibrary",
      "env": {
        "YOUTUBE_API_KEY": "${YOUTUBE_API_KEY}",
        "GITHUB_TOKEN": "${GITHUB_TOKEN}",
        "NASA_API_KEY": "${NASA_API_KEY}",
        "NEWS_API_KEY": "${NEWS_API_KEY}",
        "OPENWEATHER_API_KEY": "${OPENWEATHER_API_KEY}",
        "ALPHA_VANTAGE_API_KEY": "${ALPHA_VANTAGE_API_KEY}"
      }
    },
    "cache": {
      "command": "python",
      "args": ["-m", "dreamwalker_mcp.mcp.stdio_servers.cache_stdio"],
      "description": "Cache Manager Server - Redis-based caching and state management",
      "env": {
        "REDIS_HOST": "${REDIS_HOST:-localhost}",
        "REDIS_PORT": "${REDIS_PORT:-6379}"
      }
    },
    "utility": {
      "command": "python",
      "args": ["-m", "dreamwalker_mcp.mcp.stdio_servers.utility_stdio"],
      "description": "Utilities Server - ArXiv, TTS, Citations, Semantic Scholar",
      "env": {}
    },
    "web_search": {
      "command": "python",
      "args": ["-m", "dreamwalker_mcp.mcp.stdio_servers.web_search_stdio"],
      "description": "Web Search Server - Multi-engine web search capabilities",
      "env": {
        "SERP_API_KEY": "${SERP_API_KEY}",
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      }
    }
  }
}
